<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeframe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asdsoft.app.seminars">


    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hex1"
        tools:context="com.example.drenu.neerajapp.Home">

        <!-- TODO: Update blank fragment layout -->
        <!--    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="HOME" />
-->

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="10dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/ctd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/carouselView"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:layout_marginTop="90dp"
            android:background="#d3d3d3"
            android:text="CTD"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/pisb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctd"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="#ffffff"
            android:text="About PISB" />

        <Button
            android:id="@+id/ieee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pisb"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="#D3D3D3"
            android:text="About IEEE" />


    </RelativeLayout>

</FrameLayout>